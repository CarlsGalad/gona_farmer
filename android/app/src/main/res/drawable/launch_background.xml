<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@color/flutter_background" />

    <item>
        <bitmap
            android:gravity="center"
            android:src="@drawable/launcher_icon"
            android:width="60dp"
            android:height="60dp" />
    </item>

    <item android:bottom="50dp" android:gravity="bottom|center_horizontal">
        <rotate
            android:drawable="@drawable/custom_loading_indicator"
            android:pivotX="50%"
            android:pivotY="50%"
            android:fromDegrees="0"
            android:toDegrees="360" />
    </item>
</layer-list>